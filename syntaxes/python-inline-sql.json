{
    "fileTypes": ["py"],
    "injectionSelector":
      "L:source.python",
    "patterns": [
      {
        "contentName": "meta.embedded.inline.sql",
        "begin": "(?:[bBrRuU]?)(\"\"\")\\s*(?=SELECT|INSERT|CREATE TABLE)",
        "end": "(\\1)",
        "beginCaptures": {
          "1": {
            "name": "string.quoted.multi.python"
          }
        },
        "endCaptures": {
            "1": {
              "name": "string.quoted.multi.python"
            }
          },
        "patterns": [
          {
            "include": "source.sql"
          }
        ]
      }
    ],
    "scopeName": "inline.python-sql"
  }
